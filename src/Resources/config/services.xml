<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="SwagBundleManager\Core\Content\Bundle\BundleDefinition">
            <tag name="shopware.entity.definition" entity="swag_bundle"/>
        </service>
        <service id="SwagBundleManager\Core\Content\Bundle\Aggregate\BundleTranslation\BundleTranslationDefinition">
            <tag name="shopware.entity.definition" entity="swag_bundle_translation"/>
        </service>
        <service id="SwagBundleManager\Core\Content\Bundle\Aggregate\BundleProduct\BundleProductDefinition">
            <tag name="shopware.entity.definition" entity="swag_bundle_product"/>
        </service>
        <service id="SwagBundleManager\Core\Content\Product\ProductExtension">
            <tag name="shopware.entity.extension"/>
        </service>


<!--        Console Commands Service:-->
        <service id="SwagBundleManager\Command\CreateTestBundleCommand" public="true">
            <argument type="service" id="swag_bundle.repository" />
            <tag name="console.command" />
        </service>

<!--        Subscriber Service:-->
        <service id="SwagBundleManager\Storefront\Page\Product\Subscriber\ProductPageCriteriaSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>

<!--        Checkout services-->
        <service id="SwagBundleManager\Core\Checkout\Bundle\Cart\BundleCartProcessor">
            <argument type="service" id="swag_bundle.repository"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\PercentagePriceCalculator"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\AbsolutePriceCalculator"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\LineItemFactoryHandler\ProductLineItemFactory"/>

            <tag name="shopware.cart.processor" priority="6000"/>
            <tag name="shopware.cart.collector" priority="6000"/>

        </service>
        <service id="SwagBundleManager\Core\Checkout\Bundle\Cart\BundleLineItemFactory">
            <tag name="shopware.cart.line_item.factory"/>
        </service>


    </services>
</container>